@model Counting.Domain.Entities.Location
<div class="panel">
    @if (Model.LocationID == 0)
    {
        <div class="panel-heading">

            <h3>New Location</h3>

        </div>

        using (Html.BeginForm("LocationEdit", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="panel-body">
                <div class="form-group">

                    @Html.HiddenFor(m => m.LocationID)
                    @*@Html.ValidationSummary()*@
                    <div class="form-group">
                        <label>Name :</label>
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Description:</label>
                        @Html.TextAreaFor(m => m.Description, new { @class = "form-control" })
                    </div>
                 
                </div>

            </div>
            <div class="panel-footer">
                <input type="submit" value="Save" class="btn btn-primary" />
                @Html.ActionLink("Cancel", "LocationIndex", null, new { @class = "btn btn-default" })

            </div>
        }
    }
    else
    {
        <div class="panel-heading">

            <h3>Edit Location @Model.Name</h3>

        </div>

        using (Html.BeginForm("LocationEdit", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="panel-body">
                <div class="form-group">

                    @Html.HiddenFor(m => m.LocationID)
                    @*@Html.ValidationSummary()*@
                    <div class="form-group">
                        <label>Name :</label>
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Description:</label>
                        @Html.TextAreaFor(m => m.Description, new { @class = "form-control"})
                    </div>
                </div>

            </div>

            <div class="panel-footer">
                <input type="submit" value="Save" class="btn btn-primary" />
                @Html.ActionLink("Cancel", "LocationIndex", null, new { @class = "btn btn-default" })

            </div>
        }

    }


</div>