@model IEnumerable<Counting.Domain.Entities.Location>

@{
    ViewBag.Title = "LocationIndex";
}




<div class="panel panel-default">
    <div class="panel-heading">
        <h3>Locations</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-hover">
            <tr>
                <th class="text-center">Name</th>
                <th class="text-center">Description</th>
                <th class="text-center">Actions</th>

            </tr>
            @foreach (var location in Model)
            {
            <tr>
                <td class="text-center" style="font-size:larger">@Html.ActionLink(location.Name.ToString(), "LocationEdit", new { location.LocationID })</td>

                <td class="text-center">@location.Description</td>

                <td class="text-center">
    
                    @using (Html.BeginForm("LocationDelete", "Admin"))
                    {
                        @Html.Hidden("LocationID", location.LocationID)
                        <input type="submit"
                               class="btn btn-default btn-xs"
                               value="Delete" />
                    }
              
                </td>

            </tr>
            }
        </table>
    </div>
    <div class="panel-footer">
        @Html.ActionLink("Back", "Index", null,
        new { @class = "btn btn-default" })

        <span class="pull-right">
            @Html.ActionLink("Add", "LocationCreate", null,
                new { @class = "btn btn-success" })
        </span>
    </div>


</div>