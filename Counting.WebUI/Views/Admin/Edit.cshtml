@model Counting.Domain.Entities.Camera
<div class="panel">
    @if (Model.CameraID == 0)
    {
        <div class="panel-heading">

            <h3>Add New Camera</h3>

        </div>

        using (Html.BeginForm("Edit", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="panel-body">
                <div class="form-group">

                    @Html.HiddenFor(m => m.CameraID)
                    @*@Html.ValidationSummary()*@
                    <div class="form-group">
                        <label>Name :</label>
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>IP:</label>
                        @Html.TextBoxFor(m => m.IP, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Port:</label>

                        @Html.TextBox("Port", "", new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>URL:</label>
                        @Html.TextBoxFor(m => m.URL, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Alias:</label>
                        @Html.TextBoxFor(m => m.Alias, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Location:</label>
                        @Html.DropDownList("LocationID", null, "---Select Location---", htmlAttributes: new { @class = "form-control" })

                    </div>
                    <div class="form-group">
                        <label>Protocol:</label>
                        @Html.DropDownList("ProtocolID", null, "---Select Location---", htmlAttributes: new { @class = "form-control" })

                    </div>
                </div>

            </div>
            <div class="panel-footer">
                <input type="submit" value="Save" class="btn btn-primary" />
                @Html.ActionLink("Cancel and return to List", "Index", null, new { @class = "btn btn-default" })

            </div>
        }
    }
    else
    {
        <div class="panel-heading">

            <h3>Edit  @Model.Name</h3>

        </div>

        using (Html.BeginForm("Edit", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="panel-body">
                <div class="form-group">

                    @Html.HiddenFor(m => m.CameraID)
                    @*@Html.ValidationSummary()*@
                    <div class="form-group">
                        <label>Building Name :</label>
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>IP:</label>
                        @Html.TextBoxFor(m => m.IP, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Port</label>

                        
                        @Html.TextBoxFor(m => m.Port, new { @class = "form-control" })


                    </div>
                    <div class="form-group">
                        <label>URL</label>
                       
                        @Html.TextBoxFor(m => m.URL, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Location:</label>
                        @Html.DropDownList("LocationID", null, "---Select Location---", htmlAttributes: new { @class = "form-control" })

                    </div>
                    <div class="form-group">
                        <label>Protocol:</label>
                        @Html.DropDownList("ProtocolID", null, "---Select Location---", htmlAttributes: new { @class = "form-control" })

                    </div>
                </div>

            </div>

            <div class="panel-footer">
                <input type="submit" value="Save" class="btn btn-primary" />
                @Html.ActionLink("Cancel and return to Camera List", "Index", null, new { @class = "btn btn-default" })

            </div>
        }

    }


</div>