@model IEnumerable<Counting.Domain.Entities.Protocol>

@{
    ViewBag.Title = "Location";
}




<div class="panel panel-default">
    <div class="panel-heading">
        <h3>Protocols</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-hover">
            <tr>
                <th class="text-center">Name</th>
                <th class="text-center">Description</th>
                <th class="text-center">Actions</th>

            </tr>
            @foreach (var protocol in Model)
            {
                <tr>
                    <td class="text-center" style="font-size:larger">@Html.ActionLink(protocol.Name.ToString(), "ProtocolEdit", new { protocol.ProtocolID })</td>

                    <td class="text-center">@protocol.Description</td>

                    <td class="text-center">

                        @using (Html.BeginForm("ProtocolDelete", "Admin"))
                        {
                            @Html.Hidden("ProtocolID", protocol.ProtocolID)
                            <input type="submit"
                                   class="btn btn-default btn-xs"
                                   value="Delete" />
                        }

                    </td>

                </tr>
            }
        </table>
    </div>
    <div class="panel-footer">
        @Html.ActionLink("Back", "Index", null,
        new { @class = "btn btn-default" })

        <span class="pull-right">
            @Html.ActionLink("Add", "ProtocolCreate", null,
                new { @class = "btn btn-success" })
        </span>
    </div>


</div>